---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
import { SOCIAL_LINKS } from '../utils/constants';
---

<BaseLayout title="Contact" description="Get in touch with Ramizbhai Pinjara">
  <Header />
  
  <main class="pt-20 min-h-screen" style="padding-top: var(--height-header);">
    <section class="section-spacing" style="padding-top: var(--spacing-section-md); padding-bottom: var(--spacing-section-md);">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <!-- Get In Touch Header -->
          <div class="text-center mb-16" style="margin-bottom: var(--spacing-10);">
            <h1 class="font-bold mb-4 gradient-text" style="font-size: clamp(var(--font-size-3xl), 4vw, var(--font-size-h1)); margin-bottom: var(--spacing-3); font-weight: var(--font-weight-bold);">Get In Touch</h1>
            <p class="text-slate-300 max-w-3xl mx-auto leading-relaxed" style="font-size: var(--font-size-lg); line-height: var(--line-height-relaxed); color: var(--color-text-secondary); margin-bottom: var(--spacing-4);">
              I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision. Feel free to reach out!
            </p>
            <div class="w-24 h-1 bg-blue-400 mx-auto rounded-full" style="height: 0.25rem; border-radius: var(--radius-sm);"></div>
          </div>

          <!-- Contact Information Section -->
          <div class="mb-16" style="margin-bottom: var(--spacing-10);">
            <h2 class="font-bold mb-8 text-blue-400 text-center" style="font-size: clamp(var(--font-size-2xl), 3vw, var(--font-size-h3)); margin-bottom: var(--spacing-6); font-weight: var(--font-weight-bold);">Contact Information</h2>
            
            <!-- Image and Contact Details Layout -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center" style="gap: var(--spacing-6); align-items: center;">
              <!-- Left Side: Image -->
              <div class="order-2 lg:order-1 flex items-center justify-center">
                <img
                  src="/contact.webp"
                  srcset="/contact.webp 600w, /contact.webp 1200w"
                  sizes="(max-width: 1024px) 100vw, 600px"
                  alt="Contact Ramizbhai Pinjara - Full Stack Developer for web development projects and collaborations"
                  class="w-full h-auto rounded-xl object-cover"
                  style="border-radius: var(--radius-lg); max-width: 100%; height: auto;"
                  loading="lazy"
                  decoding="async"
                  width="600"
                  height="400"
                />
              </div>

              <!-- Right Side: Contact Details -->
              <div class="order-1 lg:order-2 space-y-6" style="display: flex; flex-direction: column; gap: var(--spacing-4);">
                <!-- Email -->
                <div class="flex items-start gap-4 glass rounded-xl border transition-all hover:border-blue-500/50 hover:scale-105" style="border-color: var(--color-border); border-radius: var(--radius-lg); padding: var(--spacing-3); gap: var(--spacing-2);">
                  <div class="flex-shrink-0 bg-gradient-bg-accent rounded-xl flex items-center justify-center shadow-lg" style="width: 3.5rem; height: 3.5rem; border-radius: var(--radius-md);">
                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.75rem; height: 1.75rem;">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold mb-1" style="font-size: var(--font-size-lg); font-weight: var(--font-weight-semibold); color: var(--color-text-secondary); margin-bottom: var(--spacing-1);">Email</h3>
                    <a
                      href="mailto:Ramizbhaipinjara@gmail.com"
                      class="text-blue-400 hover:text-cyan-400 transition-colors font-medium"
                      style="font-size: var(--font-size-base); font-weight: var(--font-weight-medium);"
                    >
                      Ramizbhaipinjara@gmail.com
                    </a>
                  </div>
                </div>

                <!-- Phone -->
                <div class="flex items-start gap-4 glass rounded-xl border transition-all hover:border-blue-500/50 hover:scale-105" style="border-color: var(--color-border); border-radius: var(--radius-lg); padding: var(--spacing-3); gap: var(--spacing-2);">
                  <div class="flex-shrink-0 bg-gradient-bg-accent rounded-xl flex items-center justify-center shadow-lg" style="width: 3.5rem; height: 3.5rem; border-radius: var(--radius-md);">
                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.75rem; height: 1.75rem;">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold mb-1" style="font-size: var(--font-size-lg); font-weight: var(--font-weight-semibold); color: var(--color-text-secondary); margin-bottom: var(--spacing-1);">Contact No</h3>
                    <a
                      href="tel:+917869247924"
                      class="text-blue-400 hover:text-cyan-400 transition-colors font-medium"
                      style="font-size: var(--font-size-base); font-weight: var(--font-weight-medium);"
                    >
                      +91 7869247924
                    </a>
                  </div>
                </div>

                <!-- Location -->
                <div class="flex items-start gap-4 glass rounded-xl border transition-all hover:border-blue-500/50 hover:scale-105" style="border-color: var(--color-border); border-radius: var(--radius-lg); padding: var(--spacing-3); gap: var(--spacing-2);">
                  <div class="flex-shrink-0 bg-gradient-bg-accent rounded-xl flex items-center justify-center shadow-lg" style="width: 3.5rem; height: 3.5rem; border-radius: var(--radius-md);">
                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.75rem; height: 1.75rem;">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold mb-1" style="font-size: var(--font-size-lg); font-weight: var(--font-weight-semibold); color: var(--color-text-secondary); margin-bottom: var(--spacing-1);">Location</h3>
                    <a
                      href="https://www.google.com/maps?q=20.7689778,72.9614137"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-blue-400 hover:text-cyan-400 transition-colors font-medium"
                      style="font-size: var(--font-size-base); font-weight: var(--font-weight-medium);"
                    >
                      20.7689778, 72.9614137
                    </a>
                  </div>
                </div>

                <!-- GitHub -->
                <div class="flex items-start gap-4 glass rounded-xl border transition-all hover:border-blue-500/50 hover:scale-105" style="border-color: var(--color-border); border-radius: var(--radius-lg); padding: var(--spacing-3); gap: var(--spacing-2);">
                  <div class="flex-shrink-0 bg-gradient-bg-accent rounded-xl flex items-center justify-center shadow-lg" style="width: 3.5rem; height: 3.5rem; border-radius: var(--radius-md);">
                    <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24" style="width: 1.75rem; height: 1.75rem;">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold mb-1" style="font-size: var(--font-size-lg); font-weight: var(--font-weight-semibold); color: var(--color-text-secondary); margin-bottom: var(--spacing-1);">GitHub</h3>
                    <a
                      href={SOCIAL_LINKS.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-blue-400 hover:text-cyan-400 transition-colors font-medium"
                      style="font-size: var(--font-size-base); font-weight: var(--font-weight-medium);"
                    >
                      View Profile
                    </a>
                  </div>
                </div>

                <!-- LinkedIn -->
                <div class="flex items-start gap-4 glass rounded-xl border transition-all hover:border-blue-500/50 hover:scale-105" style="border-color: var(--color-border); border-radius: var(--radius-lg); padding: var(--spacing-3); gap: var(--spacing-2);">
                  <div class="flex-shrink-0 bg-gradient-bg-accent rounded-xl flex items-center justify-center shadow-lg" style="width: 3.5rem; height: 3.5rem; border-radius: var(--radius-md);">
                    <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24" style="width: 1.75rem; height: 1.75rem;">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold mb-1" style="font-size: var(--font-size-lg); font-weight: var(--font-weight-semibold); color: var(--color-text-secondary); margin-bottom: var(--spacing-1);">LinkedIn</h3>
                    <a
                      href="https://in.linkedin.com/in/ramizbhai-pinjara"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-blue-400 hover:text-cyan-400 transition-colors font-medium"
                      style="font-size: var(--font-size-base); font-weight: var(--font-weight-medium);"
                    >
                      Connect with me
                    </a>
                  </div>
                </div>

              </div>
            </div>
          </div>

          <!-- Send a Message Section (Full Width) -->
          <div>
            <h2 class="font-bold mb-8 text-blue-400 text-center" style="font-size: clamp(var(--font-size-2xl), 3vw, var(--font-size-h3)); margin-bottom: var(--spacing-6); font-weight: var(--font-weight-bold);">Send a Message</h2>
            
            <!-- Contact Form (Full Width) -->
            <div class="max-w-4xl mx-auto">
              <ContactForm />
            </div>
            
            <!-- Response Time Card at the bottom -->
            <div class="max-w-4xl mx-auto mt-8" style="margin-top: var(--spacing-6);">
              <div class="glass border" style="border-color: var(--color-border); border-radius: var(--radius-lg); padding: var(--spacing-3);">
                <h3 class="font-bold mb-2 text-blue-400" style="font-size: var(--font-size-xl); font-weight: var(--font-weight-bold); margin-bottom: var(--spacing-2);">Response Time</h3>
                <p class="text-slate-300 leading-relaxed" style="font-size: var(--font-size-base); line-height: var(--line-height-relaxed); color: var(--color-text-secondary);">
                  I typically respond to messages within <span class="text-blue-400 font-semibold" style="font-weight: var(--font-weight-semibold);">24-48 hours</span>. For urgent matters, please mention it in your message subject.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

