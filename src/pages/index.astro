<script>
  // Enhanced Scroll reveal animation with staggered effects
  const revealObserverOptions = {
    threshold: [0, 0.1, 0.2, 0.3],
    rootMargin: '0px 0px -80px 0px'
  };

  // Different animation types based on element position
  function getAnimationType(element) {
    const rect = element.getBoundingClientRect();
    const viewportHeight = window.innerHeight;
    
    // Determine animation direction based on element position
    if (rect.top < viewportHeight / 2) {
      return 'fade-up'; // Elements in upper half fade up
    } else {
      return 'fade-up'; // Default to fade-up
    }
  }

  const revealObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const element = entry.target;
        const animationType = element.dataset.animation || getAnimationType(element);
        
        // Add appropriate animation class
        element.classList.add('revealed');
        
        // Add staggered delay for grid items
        if (element.dataset.index !== undefined) {
          const delay = parseInt(element.dataset.index) * 100;
          element.style.transitionDelay = `${delay}ms`;
        }
        
        // Mark as revealed to prevent re-animation
        element.dataset.revealed = 'true';
      }
    });
  }, revealObserverOptions);

  // Observe all reveal elements with enhanced options
  document.querySelectorAll('.reveal').forEach((el, index) => {
    // Set index for staggered animations in grids
    if (el.parentElement?.classList.contains('grid')) {
      el.dataset.index = index.toString();
    }
    
    // Add animation type based on element
    if (el.classList.contains('glass') || el.closest('.glass')) {
      el.dataset.animation = 'scale-fade';
    }
    
    revealObserver.observe(el);
  });

  // Initial reveal for hero with smooth entrance
  window.addEventListener('load', () => {
    const hero = document.querySelector('#home .reveal');
    if (hero) {
      // Use requestAnimationFrame for smooth initial animation
      requestAnimationFrame(() => {
        setTimeout(() => {
          hero.classList.add('revealed');
        }, 150);
      });
    }
  });

  // Enhanced scroll performance with throttling
  let scrollRevealTicking = false;
  function handleScrollReveal() {
    if (!scrollRevealTicking) {
      window.requestAnimationFrame(() => {
        // Additional scroll-based animations can be added here
        scrollRevealTicking = false;
      });
      scrollRevealTicking = true;
    }
  }

  window.addEventListener('scroll', handleScrollReveal, { passive: true });
</script>
