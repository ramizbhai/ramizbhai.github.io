---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import ContactForm from '../components/ContactForm.astro';
import projectsData from '../content/projects.json';
import { SOCIAL_LINKS } from '../utils/constants';

const featuredProjects = projectsData
  .filter(p => p.isCaseStudy)
  .slice(0, 3);
const currentProject = projectsData.find(p => p.isCurrent);
---

<BaseLayout title="Home">
  <Fragment slot="head">
    <link rel="preload" as="image" href="/my.webp" fetchpriority="high" />
  </Fragment>
  <Header />
  
  <main class="overflow-hidden" style="padding-top: var(--height-header);">
    <!-- Hero Section -->
    <section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden" style="background: #000000;">
      <!-- Dark Background with Subtle Textures -->
      <div class="absolute inset-0" style="background: #000000; background-image: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(167, 139, 250, 0.03) 2px, rgba(167, 139, 250, 0.03) 4px);"></div>
      
      <!-- Vertical Light Streaks -->
      <div class="absolute inset-0" style="background: linear-gradient(90deg, transparent 0%, rgba(167, 139, 250, 0.05) 50%, transparent 100%); background-size: 200% 100%; animation: streakMove 20s ease infinite;"></div>
      <div class="absolute inset-0" style="background: linear-gradient(90deg, transparent 0%, rgba(96, 165, 250, 0.05) 50%, transparent 100%); background-size: 200% 100%; animation: streakMove 25s ease infinite reverse;"></div>
      
      <!-- Purple/Blue Glow Orbs -->
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>
      
      <div class="container mx-auto relative z-10" style="padding-top: var(--spacing-section-md); padding-bottom: var(--spacing-section-md);">
        <!-- Desktop Layout: 3-column grid -->
        <div class="hidden lg:grid grid-cols-3 gap-8 max-w-7xl mx-auto reveal" style="align-items: start;">
          <!-- Left Side: Introduction & Sidebar Icons -->
          <div class="flex flex-col justify-start relative" style="padding-top: 0;">
            <!-- Sidebar Icons on Far Left -->
            <div class="hero-sidebar-icons absolute left-0 top-0 flex flex-col gap-4" style="gap: var(--spacing-3); left: -3rem;">
              <!-- Document Icon -->
              <div class="w-8 h-8 flex items-center justify-center text-white border border-white/20 rounded" style="width: 2rem; height: 2rem; border-radius: var(--radius-sm);">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1rem; height: 1rem;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <!-- Briefcase Icon -->
              <div class="w-8 h-8 flex items-center justify-center text-white border border-white/20 rounded" style="width: 2rem; height: 2rem; border-radius: var(--radius-sm);">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1rem; height: 1rem;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <!-- Gear/Settings Icon -->
              <div class="w-8 h-8 flex items-center justify-center text-white border border-white/20 rounded" style="width: 2rem; height: 2rem; border-radius: var(--radius-sm);">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1rem; height: 1rem;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <!-- Heart Icon -->
              <div class="w-8 h-8 flex items-center justify-center text-white border border-white/20 rounded" style="width: 2rem; height: 2rem; border-radius: var(--radius-sm);">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1rem; height: 1rem;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
            </div>
            
            <div>
              <p class="hero-greeting" style="font-size: var(--font-size-base); margin-bottom: var(--spacing-2); font-weight: var(--font-weight-medium); font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;">
                Hello, I'm
              </p>
              <h1 class="hero-name" style="font-size: clamp(3rem, 6vw, 5.5rem); margin-bottom: var(--spacing-2); line-height: 1.1; font-weight: 800; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif; letter-spacing: -0.02em;">
                Ramizbhai<br />Pinjara
              </h1>
              <p class="leading-relaxed" style="font-size: var(--font-size-base); line-height: var(--line-height-relaxed); color: #ffffff;">
                Building High-Performance, Scalable Web Apps using Next.js, React, and TypeScript. Committed to pixel-perfect UIs, clean code, and exceptional user experiences.
              </p>
            </div>
          </div>
          
          <!-- Center: Profile Image with Purple-to-Blue Glow -->
          <div class="flex flex-col items-center justify-center" style="align-self: center;">
            <div class="relative flex items-center justify-center" style="overflow: visible;">
              <!-- Profile Image -->
              <img
                src="/my.webp"
                srcset="/my.webp 1x, /my.webp 2x"
                alt="Ramizbhai Pinjara - Full Stack Developer and UI Specialist Portfolio"
                class="relative object-contain object-center hero-profile-image"
                style="width: auto; height: 50rem; max-width: none; background: transparent; z-index: 1; border: none; outline: none; box-shadow: none; display: block;"
                loading="eager"
                fetchpriority="high"
                decoding="async"
                width="800"
                height="1200"
              />
            </div>
            <!-- Pagination Dots -->
            <div class="flex gap-2 mt-6" style="gap: var(--spacing-1); margin-top: var(--spacing-4);">
              <div class="w-2 h-2 rounded-full" style="width: 0.5rem; height: 0.5rem; background: #10b981; border-radius: 50%;"></div>
              <div class="w-2 h-2 rounded-full border border-white/30" style="width: 0.5rem; height: 0.5rem; background: transparent; border-radius: 50%;"></div>
              <div class="w-2 h-2 rounded-full border border-white/30" style="width: 0.5rem; height: 0.5rem; background: transparent; border-radius: 50%;"></div>
              <div class="w-2 h-2 rounded-full border border-white/30" style="width: 0.5rem; height: 0.5rem; background: transparent; border-radius: 50%;"></div>
              <div class="w-2 h-2 rounded-full border border-white/30" style="width: 0.5rem; height: 0.5rem; background: transparent; border-radius: 50%;"></div>
            </div>
          </div>
          
          <!-- Right Side: Title & Tagline -->
          <div class="flex flex-col justify-start" style="align-self: center;">
            <p class="hero-title-small mb-2" style="font-size: var(--font-size-lg); margin-bottom: var(--spacing-1); font-weight: var(--font-weight-medium);">
              Creative Full-Stack
            </p>
            <h2 class="hero-role mb-4" style="font-size: clamp(var(--font-size-2xl), 3vw, var(--font-size-4xl)); margin-bottom: var(--spacing-2); font-weight: 800; line-height: 1.1;">
              Developer & UI<br />Specialist
            </h2>
            <p class="leading-relaxed" style="font-size: var(--font-size-base); line-height: var(--line-height-relaxed); color: #ffffff;">
              Building scalable solutions with HTML, optimized and clean code, and exceptional user experiences.
            </p>
          </div>
        </div>
        
        <!-- Mobile Layout: Image with overlays, text below -->
        <div class="lg:hidden max-w-7xl mx-auto reveal">
          <!-- Profile Image Container with Overlays -->
          <div class="relative flex items-center justify-center mb-6 hero-mobile-image-container" style="margin-bottom: var(--spacing-4);">
            <!-- Profile Image -->
            <img
              src="/my.webp"
              srcset="/my.webp 400w, /my.webp 800w"
              sizes="(max-width: 640px) 400px, 800px"
              alt="Ramizbhai Pinjara - Full Stack Developer and UI Specialist Portfolio"
              class="relative object-contain object-center hero-profile-image"
              style="width: auto; height: 18rem; max-width: 100%; background: transparent; z-index: 1; border: none; outline: none; box-shadow: none; display: block;"
              loading="eager"
              fetchpriority="high"
              decoding="async"
              width="400"
              height="600"
            />
            
            <!-- Top-Left Overlay: Hello, I'm Ramizbhai Pinjara -->
            <div class="hero-mobile-overlay-top-left absolute top-0 left-0" style="padding: var(--spacing-2); z-index: 10;">
              <p class="hero-greeting" style="margin-bottom: var(--spacing-1); font-weight: var(--font-weight-medium); font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;">
                Hello, I'm
              </p>
              <h1 class="hero-name" style="line-height: 1.1; font-weight: 800; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif; letter-spacing: -0.02em;">
                Ramizbhai<br />Pinjara
              </h1>
            </div>
            
            <!-- Bottom-Right Overlay: Creative Full-Stack Developer & UI Specialist -->
            <div class="hero-mobile-overlay-bottom-right absolute bottom-0 right-0" style="padding: var(--spacing-2); z-index: 10; text-align: right;">
              <p class="hero-title-small mb-1" style="margin-bottom: var(--spacing-1); font-weight: var(--font-weight-medium);">
                Creative Full-Stack
              </p>
              <h2 class="hero-role" style="font-weight: 800; line-height: 1.1;">
                Developer & UI<br />Specialist
              </h2>
            </div>
          </div>
          
          <!-- Description Text Below Photo -->
          <div class="px-4 mb-6" style="padding-left: var(--spacing-2); padding-right: var(--spacing-2); margin-bottom: var(--spacing-4);">
            <p class="leading-relaxed mb-3" style="font-size: var(--font-size-sm); line-height: var(--line-height-relaxed); color: #ffffff; margin-bottom: var(--spacing-2);">
              Building High-Performance, Scalable Web Apps using Next.js, React, and TypeScript. Committed to pixel-perfect UIs, clean code, and exceptional user experiences.
            </p>
            <p class="leading-relaxed" style="font-size: var(--font-size-sm); line-height: var(--line-height-relaxed); color: #ffffff;">
              Building scalable solutions with HTML, optimized and clean code, and exceptional user experiences.
            </p>
          </div>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col gap-4 justify-center items-center px-4" style="gap: var(--spacing-3); padding-left: var(--spacing-2); padding-right: var(--spacing-2);">
            <a
              href="#projects"
              class="w-full px-8 py-3 rounded-lg font-semibold text-white flex items-center justify-center gap-2 transition-all hover:scale-105"
              style="padding: var(--spacing-2) var(--spacing-6); border-radius: var(--radius-lg); background: linear-gradient(135deg, #3b82f6 0%, #10b981 100%); box-shadow: 0 4px 20px rgba(59, 130, 246, 0.4);"
            >
              View Projects
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
            <a
              href="#contact"
              class="w-full px-8 py-3 rounded-lg font-semibold text-white border border-white/30 transition-all hover:bg-white/5 text-center"
              style="padding: var(--spacing-2) var(--spacing-6); border-radius: var(--radius-lg); background: transparent;"
            >
              Get In Touch
            </a>
          </div>
        </div>
        
        <!-- Desktop CTA Buttons at Bottom -->
        <div class="hidden lg:flex flex-row gap-4 justify-center items-center mt-12" style="gap: var(--spacing-3); margin-top: var(--spacing-10);">
          <a
            href="#projects"
            class="px-8 py-3 rounded-lg font-semibold text-white flex items-center gap-2 transition-all hover:scale-105"
            style="padding: var(--spacing-2) var(--spacing-6); border-radius: var(--radius-lg); background: linear-gradient(135deg, #3b82f6 0%, #10b981 100%); box-shadow: 0 4px 20px rgba(59, 130, 246, 0.4);"
          >
            View Projects
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a
            href="#contact"
            class="px-8 py-3 rounded-lg font-semibold text-white border border-white/30 transition-all hover:bg-white/5"
            style="padding: var(--spacing-2) var(--spacing-6); border-radius: var(--radius-lg); background: transparent;"
          >
            Get In Touch
          </a>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="section-spacing relative" client:visible>
      <div class="container mx-auto">
        <div class="max-w-4xl mx-auto">
          <div class="text-center reveal" style="margin-bottom: var(--spacing-8);">
            <h2 class="font-bold mb-4 gradient-text" style="font-size: clamp(var(--font-size-3xl), 4vw, var(--font-size-h2)); margin-bottom: var(--spacing-3); font-weight: var(--font-weight-bold);">About Me</h2>
            <div class="w-24 h-1 bg-blue-400 mx-auto rounded-full" style="height: 0.25rem; border-radius: var(--radius-sm);"></div>
          </div>
          
          <div class="glass reveal" style="border-color: var(--color-border); border-radius: var(--radius-xl); padding: var(--card-padding-md);">
            <div style="display: flex; flex-direction: column; gap: var(--spacing-4);">
              <!-- Introduction -->
              <div>
                <p class="text-slate-300 leading-relaxed" style="font-size: var(--font-size-base); line-height: var(--line-height-relaxed); color: var(--color-text-secondary);">
                  My name is <strong class="text-blue-400 font-semibold">Ramizbhai Pinjara</strong>, and I am a passionate <strong class="text-blue-400 font-semibold">Full Stack Developer</strong> with <strong class="text-blue-400 font-semibold">4+ years</strong> of experience. My specialization lies in building fast, user-friendly, and <strong class="text-blue-400 font-semibold">SEO-optimized</strong> web applications. I take projects from concept to final delivery, ensuring clean and scalable engineering throughout the process.
                </p>
              </div>

              <!-- Technical Expertise Summary -->
              <div>
                <h3 class="font-bold mb-3 text-blue-400" style="font-size: var(--font-size-xl); margin-bottom: var(--spacing-2); font-weight: var(--font-weight-bold);">ðŸ’» Technical Expertise</h3>
                <div style="display: flex; flex-direction: column; gap: var(--spacing-3);">
                  <div>
                    <p class="text-slate-300 leading-relaxed mb-2" style="font-size: var(--font-size-sm); line-height: var(--line-height-relaxed); color: var(--color-text-secondary); margin-bottom: var(--spacing-1);">
                      <strong class="text-blue-400 font-semibold">Front-End Development:</strong> I design smooth and modern UIs using React.js, <strong class="text-blue-400">Next.js</strong>, Tailwind CSS, and shadcn/ui. I bring rich and engaging interactions to life with Framer Motion.
                    </p>
                  </div>
                  <div>
                    <p class="text-slate-300 leading-relaxed" style="font-size: var(--font-size-sm); line-height: var(--line-height-relaxed); color: var(--color-text-secondary);">
                      <strong class="text-blue-400 font-semibold">Full Stack & Back-End:</strong> I possess strong Full Stack skills in JavaScript, <strong class="text-blue-400">TypeScript</strong>, Node.js, and Express. For databases, I work with MongoDB and <strong class="text-blue-400">MySQL</strong>, allowing me to build fully functional applications.
                    </p>
                  </div>
                </div>
              </div>

              <!-- Work Philosophy Summary -->
              <div>
                <h3 class="font-bold mb-3 text-blue-400" style="font-size: var(--font-size-xl); margin-bottom: var(--spacing-2); font-weight: var(--font-weight-bold);">ðŸš€ Work Philosophy</h3>
                <p class="text-slate-300 leading-relaxed mb-3" style="font-size: var(--font-size-sm); line-height: var(--line-height-relaxed); color: var(--color-text-secondary); margin-bottom: var(--spacing-2);">
                  I also work as a freelancer, helping clients deliver <strong class="text-blue-400 font-semibold">high-performance and impactful digital products</strong>. I truly enjoy taking on challenging projects and finding <strong class="text-blue-400 font-semibold">smart solutions</strong> for tough problems. I am always ready for new ideas, complex tasks, or any challenging project thrown my way, and I'm constantly eager to learn, experiment, and grow professionally.
                </p>
              </div>

              <!-- Current Experimentation -->
              <div>
                <h3 class="font-bold mb-3 text-blue-400" style="font-size: var(--font-size-xl); margin-bottom: var(--spacing-2); font-weight: var(--font-weight-bold);">ðŸ’¡ Current Experimentation</h3>
                <p class="text-slate-300 leading-relaxed" style="font-size: var(--font-size-sm); line-height: var(--line-height-relaxed); color: var(--color-text-secondary);">
                  I am currently building my own <strong class="text-blue-400 font-semibold">Smart Home Automation</strong> project. Through this, I am experimenting with modern technologies to create intelligent and connected systems.
                </p>
              </div>
            </div>
            <div class="text-center" style="margin-top: var(--spacing-6);">
              <a
                href="/about"
                class="inline-flex items-center justify-center text-blue-400 hover:text-cyan-400 font-semibold transition-colors group"
                style="font-size: var(--font-size-lg); font-weight: var(--font-weight-semibold);"
              >
                Learn more about my journey
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem; margin-left: var(--spacing-2);">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Current Focus Section -->
    {currentProject && (
      <section class="section-spacing relative" client:visible>
        <div class="container mx-auto">
          <div class="max-w-4xl mx-auto">
            <div class="text-center reveal" style="margin-bottom: var(--spacing-8);">
              <h2 class="font-bold mb-4 gradient-text" style="font-size: clamp(var(--font-size-3xl), 4vw, var(--font-size-h2)); margin-bottom: var(--spacing-3); font-weight: var(--font-weight-bold);">Current Focus</h2>
              <div class="w-24 h-1 bg-blue-400 mx-auto rounded-full" style="height: 0.25rem; border-radius: var(--radius-sm);"></div>
            </div>
            
            <div class="glass reveal relative overflow-hidden" style="border-color: var(--color-border); border-radius: var(--radius-xl); padding: var(--card-padding-md);">
              <div class="absolute top-0 right-0 w-64 h-64 bg-blue-500/8 rounded-full blur-3xl"></div>
              <div class="relative z-10 text-center">
                <div class="flex items-center justify-center flex-wrap" style="gap: var(--spacing-3); margin-bottom: var(--spacing-3);">
                  <span class="bg-green-500/15 text-green-400 font-medium rounded-full border border-green-500/25" style="padding: var(--spacing-2) var(--spacing-2); font-size: var(--font-size-sm); border-radius: var(--radius-sm);">
                    In Progress
                  </span>
                  <span class="text-slate-400" style="font-size: var(--font-size-sm); color: var(--color-text-muted);">Since {currentProject.year}</span>
                </div>
                <h3 class="font-bold text-blue-400 mb-4" style="font-size: clamp(var(--font-size-2xl), 3vw, var(--font-size-h3)); margin-bottom: var(--spacing-2); font-weight: var(--font-weight-bold);">
                  {currentProject.name}
                </h3>
                <p class="text-slate-300 mb-6 leading-relaxed max-w-2xl mx-auto" style="font-size: var(--font-size-lg); margin-bottom: var(--spacing-3); line-height: var(--line-height-relaxed); color: var(--color-text-secondary);">
                  {currentProject.description}
                </p>
                <div class="flex flex-wrap justify-center" style="gap: var(--spacing-3);">
                  {currentProject.technologies.slice(0, 6).map((tech) => (
                    <span class="bg-slate-800/40 text-slate-300 rounded-full border transition-colors" style="border-color: var(--color-border); padding: var(--spacing-2) var(--spacing-2); font-size: var(--font-size-sm); border-radius: var(--radius-sm);">
                      {tech}
                    </span>
                  ))}
                </div>
                {currentProject.isCaseStudy && (
                  <div class="mt-6" style="margin-top: var(--spacing-4);">
                    <a
                      href={`/projects/${currentProject.slug}`}
                      class="inline-flex items-center justify-center gap-2 px-6 py-3 rounded-lg font-semibold text-white border transition-all hover:scale-105 hover:border-blue-400/50"
                      style="padding: var(--spacing-2) var(--spacing-4); border-radius: var(--radius-lg); background: linear-gradient(135deg, #3b82f6 0%, #10b981 100%); box-shadow: 0 4px 20px rgba(59, 130, 246, 0.4); border-color: rgba(59, 130, 246, 0.3); font-size: var(--font-size-base); font-weight: var(--font-weight-semibold);"
                    >
                      View Case Study
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                      </svg>
                    </a>
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Current Working Project Section -->
    <section class="section-spacing relative" client:visible>
      <div class="container mx-auto">
