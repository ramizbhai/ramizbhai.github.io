                      <div class="flex flex-wrap gap-2 pt-4 border-t border-slate-700/50" style="padding-top: var(--spacing-3); border-top: 1px solid rgba(148, 163, 184, 0.2); gap: var(--spacing-2);">
                        {exp.technologies.map((tech) => (
                          <span class="tech-button px-4 py-2 text-sm font-medium text-blue-400 rounded-lg transition-all hover:scale-105" style="padding: var(--spacing-2) var(--spacing-3); border-radius: var(--radius-lg); font-size: var(--font-size-sm); font-weight: var(--font-weight-medium);">
