  <main class="pt-20 min-h-screen">
    <!-- Hero Section -->
    <section class="section-spacing">
      <div class="container mx-auto">
        <div class="max-w-5xl mx-auto">
          <div class="text-center reveal" style="margin-bottom: var(--spacing-8);">
