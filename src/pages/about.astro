<style>
  /* Responsive grid for introduction section */
  @media (min-width: 1024px) {
    #about-intro-grid {
      grid-template-columns: 1fr 1fr !important;
    }
  }

  /* Technology button styles with gradient border */
  .tech-button {
    position: relative;
    background: rgba(26, 31, 40, 0.7);
    backdrop-filter: blur(10px);
    border: 1.5px solid transparent;
    cursor: default;
    isolation: isolate;
  }

  /* Gradient border using pseudo-element */
  .tech-button::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: var(--radius-lg);
    padding: 1.5px;
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.6), rgba(34, 211, 238, 0.6), rgba(167, 139, 250, 0.6));
    -webkit-mask: 
      linear-gradient(#fff 0 0) content-box, 
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: destination-out;
    mask-composite: exclude;
    z-index: -1;
    transition: all 0.3s ease;
  }

  .tech-button:hover {
    background: rgba(59, 130, 246, 0.25);
    box-shadow: 
      0 4px 16px rgba(96, 165, 250, 0.4), 
      0 0 24px rgba(34, 211, 238, 0.3),
      inset 0 0 20px rgba(167, 139, 250, 0.15);
    transform: translateY(-2px) scale(1.02);
    color: var(--color-cyan-blue-bright);
  }

  .tech-button:hover::before {
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.9), rgba(34, 211, 238, 0.9), rgba(167, 139, 250, 0.9));
    box-shadow: 0 0 20px rgba(96, 165, 250, 0.6);
  }
</style>

<script>
  // Scroll reveal animation
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible', 'revealed');
      }
    });
  }, observerOptions);

  document.querySelectorAll('.reveal').forEach(el => {
    observer.observe(el);
  });
</script>

