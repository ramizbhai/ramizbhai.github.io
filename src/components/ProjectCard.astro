---
interface Props {
  project: {
    id: number;
    name: string;
    slug: string;
    description: string;
    technologies: string[];
    year: number;
    region?: string;
    country?: string;
    isCaseStudy?: boolean;
    isCurrent?: boolean;
  };
}

const { project } = Astro.props;
const projectUrl = project.isCaseStudy ? `/projects/${project.slug}` : '#';
---

<div class="group relative glass overflow-hidden card-hover h-full flex flex-col min-h-[300px]" style="border-color: var(--color-border); border-radius: var(--radius-lg); min-height: 300px;">
  <!-- Subtle Gradient Overlay on Hover -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-500/0 via-cyan-500/0 to-purple-500/0 group-hover:from-blue-500/8 group-hover:via-cyan-500/8 group-hover:to-purple-500/8 transition-all duration-500 pointer-events-none"></div>
  
  <a href={projectUrl} class="block relative z-10 h-full flex flex-col">
    <div class="p-6 md:p-8 flex flex-col flex-grow" style="padding: var(--card-padding-sm);">
      <!-- Header -->
      <div class="flex items-start justify-between mb-4" style="margin-bottom: var(--spacing-2);">
        <h3 class="text-lg md:text-xl font-semibold text-blue-400 group-hover:text-blue-300 transition-colors flex-1 leading-tight" style="font-size: var(--font-size-xl); font-weight: var(--font-weight-semibold); line-height: var(--line-height-tight);">
          {project.name}
        </h3>
        {project.isCurrent && (
          <span class="ml-3 px-3 py-1.5 text-xs font-medium bg-green-500/15 text-green-400 rounded-full border border-green-500/25 flex-shrink-0" style="border-radius: var(--radius-sm); font-size: var(--font-size-xs);">
            Current
          </span>
        )}
      </div>
      
      {project.region && project.country && (
        <div class="flex items-center gap-2 mb-4 text-sm text-slate-400" style="margin-bottom: var(--spacing-2); font-size: var(--font-size-sm);">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{project.region} â€¢ {project.country}</span>
        </div>
      )}
      
      <p class="text-slate-300 mb-6 line-clamp-3 leading-relaxed flex-grow" style="margin-bottom: var(--spacing-3); font-size: var(--font-size-base); line-height: var(--line-height-relaxed); color: var(--color-text-secondary);">
        {project.description}
      </p>
      
      <div class="flex flex-wrap gap-2 mb-6" style="margin-bottom: var(--spacing-3); gap: var(--spacing-2);">
        {project.technologies.slice(0, 4).map((tech) => (
          <span class="px-3 py-1.5 text-xs font-medium bg-slate-800/40 text-blue-400 rounded-lg border" style="border-color: var(--color-border); border-radius: var(--radius-sm); font-size: var(--font-size-xs); padding: var(--spacing-1) var(--spacing-3);">
            {tech}
          </span>
        ))}
        {project.technologies.length > 4 && (
          <span class="px-3 py-1.5 text-xs font-medium bg-slate-800/40 text-slate-400 rounded-lg border" style="border-color: var(--color-border); border-radius: var(--radius-sm); font-size: var(--font-size-xs); padding: var(--spacing-1) var(--spacing-3);">
            +{project.technologies.length - 4}
          </span>
        )}
      </div>
      
      <div class="flex items-center justify-between pt-4 border-t mt-auto" style="padding-top: var(--spacing-2); border-color: var(--color-border);">
        <span class="text-sm font-medium text-slate-400" style="font-size: var(--font-size-sm); font-weight: var(--font-weight-medium);">{project.year}</span>
        {project.isCaseStudy && (
          <span class="text-sm font-semibold text-blue-400 group-hover:text-blue-300 flex items-center gap-1.5 transition-colors" style="font-size: var(--font-size-sm); font-weight: var(--font-weight-semibold); gap: var(--spacing-1);">
            View Case Study
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </span>
        )}
      </div>
    </div>
  </a>
</div>

