---
import { SITE_CONFIG } from '../utils/constants';
let currentYear = new Date().getFullYear();

---

<footer class="relative border-t mt-auto bg-gradient-to-b from-transparent to-slate-950/50" style="border-color: var(--color-border);">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-14">
    <div class="flex flex-col justify-center items-center">
      <div class="text-slate-400 text-center w-full">
        <p class="text-sm md:text-base">
          &copy; {currentYear} <span class="text-blue-400 font-medium">{SITE_CONFIG.name}</span>. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>

